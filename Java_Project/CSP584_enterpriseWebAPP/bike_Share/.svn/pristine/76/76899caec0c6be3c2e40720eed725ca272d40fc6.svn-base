$(document).ready(function () {
    $("#confirm-orders").click(function () {
        
        var goodsid=$('#goodsid').val();
        var flag=$('#flag').val();
        var isPay = $('#pay-select').val();
      
        $.ajax({
            url: "ShowAddOrder",
            type: "POST",
            data: {
                flag:flag,
                isPay: isPay,
                goodsid:goodsid,
            },
            success: function () {
                swal("购买成功", "", "success");
               // location.href = "info/list"
            },
            error: function () {
                swal("购买失败，无法连接到服务器！");
            }
        });
    });
});